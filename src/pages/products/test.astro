---
import { getWordPressAPI } from '../../lib/api/wordpress';
import { formatWordPressContent, formatDate } from '../../utils/format';


// Initialize WordPress API
const wordPressAPI = getWordPressAPI();

// Fetch products with caching
let products: any[] = [];
let error: string | null = null;
let cacheStatus = '';

try {
  console.log('[Test Page] Fetching products...');
  products = await wordPressAPI.fetchProducts({
    per_page: 10,
    orderby: 'date',
    order: 'desc'
  });
  console.log(`[Test Page] Fetched ${products.length} products`);
} catch (err) {
  console.error('[Test Page] Error fetching products:', err);
  error = err instanceof Error ? err.message : 'Unknown error occurred';
}

// Check cache status (this would be available in the API logs)
cacheStatus = 'Check console for cache status';
---

<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products Test - KNX Store</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="bg-gray-50 min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Header -->
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Products Test Page</h1>
        <p class="text-gray-600">Testing WordPress API integration with Redis caching</p>
        <div class="mt-4 p-4 bg-blue-50 border border-blue-200 rounded-lg">
          <p class="text-sm text-blue-800">
            <strong>Cache Status:</strong> {cacheStatus}
          </p>
          <p class="text-sm text-blue-800 mt-1">
            <strong>API URL:</strong> {process.env.WORDPRESS_API_URL || 'Not configured'}
          </p>
        </div>
      </div>

      <!-- Error Display -->
      {error && (
        <div class="mb-8 p-4 bg-red-50 border border-red-200 rounded-lg">
          <h3 class="text-lg font-medium text-red-800 mb-2">Error</h3>
          <p class="text-red-700">{error}</p>
          <p class="text-sm text-red-600 mt-2">
            Make sure your WordPress API is accessible and environment variables are configured.
          </p>
        </div>
      )}

      <!-- Products Grid -->
      {products.length > 0 ? (
        <div>
          <h2 class="text-2xl font-semibold text-gray-900 mb-6">
            Products ({products.length})
          </h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
            {products.map((product) => (
              <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <!-- Product Image -->
                <div class="aspect-square bg-gray-200 flex items-center justify-center">
                  {product.featured_media ? (
                    <img
                      src={`${process.env.WORDPRESS_API_URL?.replace('/wp-json', '')}/wp-content/uploads/featured-${product.featured_media}.jpg`}
                      alt={product.title.rendered}
                      class="w-full h-full object-cover"
                      onerror="this.style.display='none'"
                    />
                  ) : (
                    <div class="text-gray-400 text-center p-4">
                      <svg class="w-12 h-12 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                      </svg>
                      <p class="text-sm">No Image</p>
                    </div>
                  )}
                </div>

                <!-- Product Info -->
                <div class="p-4">
                  <h3 class="text-lg font-semibold text-gray-900 mb-2 line-clamp-2">
                    {product.title.rendered}
                  </h3>
                  
                  <p class="text-gray-600 text-sm mb-3 line-clamp-3">
                    {formatWordPressContent(product.excerpt.rendered, 100)}
                  </p>
                  
                  <div class="flex items-center justify-between">
                    <span class="text-sm text-gray-500">
                      {formatDate(product.date, 'short')}
                    </span>
                    <a
                      href={`/products/${product.slug}`}
                      class="text-blue-600 hover:text-blue-800 text-sm font-medium"
                    >
                      View Details â†’
                    </a>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      ) : !error ? (
        <div class="text-center py-12">
          <div class="text-gray-400 mb-4">
            <svg class="w-16 h-16 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
            </svg>
          </div>
          <h3 class="text-lg font-medium text-gray-900 mb-2">No Products Found</h3>
          <p class="text-gray-600">
            No products were returned from the WordPress API. Check your API configuration.
          </p>
        </div>
      ) : null}

      <!-- Debug Information -->
      <div class="mt-12 p-6 bg-gray-100 rounded-lg">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Debug Information</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
          <div>
            <strong>Environment Variables:</strong>
            <ul class="mt-2 space-y-1">
              <li>WORDPRESS_API_URL: {process.env.WORDPRESS_API_URL || 'Not set'}</li>
              <li>REDIS_HOST: {process.env.REDIS_HOST || 'localhost'}</li>
              <li>REDIS_PORT: {process.env.REDIS_PORT || '6379'}</li>
            </ul>
          </div>
          <div>
            <strong>API Status:</strong>
            <ul class="mt-2 space-y-1">
              <li>Products Count: {products.length}</li>
              <li>Error: {error ? 'Yes' : 'No'}</li>
              <li>Build Time: {new Date().toISOString()}</li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <style>
      .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
      }
      .line-clamp-3 {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
      }
    </style>
  </body>
</html> 
const currentLang = Astro.params.lang || 'en';
const currentPath = Astro.url.pathname;
const basePath = currentPath.replace(/^\/[a-z]{2}/, '') || '/';

// Get current page path without language prefix
const getPathForLanguage = (langCode: string) => {
  if (langCode === 'en') {
    return basePath;
  }
  return `/${langCode}${basePath}`;
};

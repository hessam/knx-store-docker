---
import { formatWordPressContent, formatPrice, extractFirstImage } from '../utils/format';
import Card from './Card.astro';
import Button from './Button.astro';

interface Props {
  product: {
    id: number;
    name: string;
    description: string;
    price: string;
    regular_price: string;
    sale_price?: string;
    images: Array<{ src: string; alt: string }>;
    permalink: string;
    slug: string;
  };
  loading?: boolean;
}

const { product, loading = false } = Astro.props;
const { id, name, description, price, regular_price, sale_price, images, permalink, slug } = product;

const isOnSale = sale_price && sale_price !== regular_price;
const mainImage = extractFirstImage(images);
const formattedDescription = formatWordPressContent(description);
---

<Card 
  variant="default" 
  padding="p-4" 
  hover={true} 
  clickable={true} 
  href={permalink}
  data-track-event="product_click"
  data-track-category="ecommerce"
  data-track-label={name}
>
  {loading ? (
    <!-- Loading State -->
    <div class="animate-pulse">
      <div class="bg-gray-300 h-48 rounded-lg mb-4"></div>
      <div class="space-y-3">
        <div class="bg-gray-300 h-4 rounded w-3/4"></div>
        <div class="bg-gray-300 h-3 rounded w-1/2"></div>
        <div class="bg-gray-300 h-6 rounded w-1/3"></div>
        <div class="bg-gray-300 h-8 rounded w-1/4"></div>
      </div>
    </div>
  ) : (
    <!-- Product Content -->
    <div class="space-y-4">
      <!-- Product Image -->
      <div class="relative aspect-square overflow-hidden rounded-lg bg-gray-100">
        {mainImage ? (
          <img 
            src={mainImage.src} 
            alt={mainImage.alt || name}
            class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"
            loading="lazy"
          />
        ) : (
          <div class="w-full h-full flex items-center justify-center bg-gray-200">
            <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
          </div>
        )}
        
        <!-- Sale Badge -->
        {isOnSale && (
          <div class="absolute top-2 right-2 bg-red-500 text-white text-xs font-bold px-2 py-1 rounded-full">
            SALE
          </div>
        )}
      </div>

      <!-- Product Info -->
      <div class="space-y-2">
        <h3 class="text-lg font-semibold text-gray-900 line-clamp-2 hover:text-blue-600 transition-colors">
          {name}
        </h3>
        
        <div class="text-sm text-gray-600 line-clamp-3">
          {formattedDescription}
        </div>
        
        <!-- Price -->
        <div class="flex items-center space-x-2">
          {isOnSale ? (
            <>
              <span class="text-lg font-bold text-red-600">
                {formatPrice(sale_price)}
              </span>
              <span class="text-sm text-gray-500 line-through">
                {formatPrice(regular_price)}
              </span>
            </>
          ) : (
            <span class="text-lg font-bold text-gray-900">
              {formatPrice(price)}
            </span>
          )}
        </div>
      </div>

      <!-- Add to Cart Button -->
      <Button 
        variant="primary" 
        size="md" 
        fullWidth={true}
        data-track-event="add_to_cart"
        data-track-category="ecommerce"
        data-track-label={name}
        data-track-value={price}
      >
        Add to Cart
      </Button>
    </div>
  )}
</Card>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style> 
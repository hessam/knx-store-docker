{
  "name": "knx-store-dev",
  "version": "1.0.0",
  "description": "KNX Store Development Environment",
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "build:preview": "NODE_ENV=preview astro build",
    "preview": "astro preview",
    "preview:ci": "NODE_ENV=preview astro build && astro preview --host 0.0.0.0 --port 4001",
    "astro": "astro",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false --passWithNoTests",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.astro",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx,.astro --fix",
    "type-check": "astro check",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test:ui": "vitest --ui",
    "test:smoke": "jest --testPathPattern=smoke",
    "test:e2e": "playwright test --config=playwright.config.ts",
    "test:performance": "lhci autorun",
    "api-server": "node api-server.js",
    "build:prod": "astro build && npm run optimize",
    "optimize": "astro build --site https://your-knx-store.vercel.app",
    "vercel-build": "npm run build",
    "vercel-dev": "npm run dev",
    "vercel-preview": "npm run preview",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "prepare": "husky install"
  },
  "dependencies": {
    "@astrojs/check": "^0.5.2",
    "@astrojs/mdx": "^2.1.1",
    "@astrojs/node": "^8.2.0",
    "@astrojs/react": "^3.0.10",
    "@astrojs/sitemap": "^3.0.4",
    "@astrojs/tailwind": "^5.1.0",
    "@sendgrid/mail": "^8.1.1",
    "@stripe/stripe-js": "^2.4.0",
    "astro": "^4.4.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "googleapis": "^133.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "stripe": "^14.10.0",
    "tailwindcss": "^3.4.0",
    "woocommerce-api": "^1.5.0",
    "zod": "^3.22.4"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.9.0",
    "@rollup/rollup-linux-arm64-gnu": "^4.9.0",
    "@rollup/rollup-darwin-x64": "^4.9.0",
    "@rollup/rollup-darwin-arm64": "^4.9.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitest/ui": "^1.0.4",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-astro": "^0.31.3",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@lhci/cli": "^0.12.0",
    "identity-obj-proxy": "^3.0.0",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "prettier-plugin-astro": "^0.13.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "astro",
    "ecommerce",
    "knx",
    "bms",
    "wordpress",
    "woocommerce",
    "stripe"
  ],
  "author": "KNX Store Team",
  "license": "MIT"
} 